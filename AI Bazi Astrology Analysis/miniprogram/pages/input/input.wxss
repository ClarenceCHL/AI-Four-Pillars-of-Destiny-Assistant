.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333;
}

.input-group {
  background-color: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx 0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #007AFF;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.submit-btn:active {
  opacity: 0.8;
} 